<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Sanchari" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Make sure these are set -->
        <item name="android:statusBarColor">@color/statusbar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item> <!-- For dark icons -->
    </style>
    <style name="Base.Theme.Sanchari.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Base.Theme.Sanchari.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Base.Theme.Sanchari.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
